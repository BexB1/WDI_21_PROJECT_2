<!DOCTYPE html>
<html>
  <head>
    <title>ThirtyWins</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'gritter.js.erb', 'data-turbolinks-track': 'reload' %>
    <link href="https://fonts.googleapis.com/css?family=Oxygen:300,700" rel="stylesheet">

  </head>

  <body>

  <nav>

    <ul>
    <% if current_user %>
      <li><%= image_tag @user.profile_picture.thumb.url, class: 'profile_thumb' %></li>
    <% end %>
      <li><%= link_to "Home", root_path %></li>
      <li><%= link_to "Pledges", pledges_path %></li>
    <% if current_user %>
      <li><%= current_user.email %></li>
      <li><%= link_to "Edit Profile", edit_user_registration_path %></li>
      <li><%= link_to "Log out", destroy_user_session_path, method: :delete %></li>
    <% else %>
      <li><%= link_to "Sign In", new_user_session_path %></li>
      <li><%= link_to "Register",  new_user_registration_path %></li>
    </ul>
    <% end %>

  </nav>
  
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>

    <!-- Gritter -->


    <%= js extend_gritter :position => "bottom_right" %>

    <% if flash[:notice] %>

      <%= js add_gritter(flash[:notice], :image => :success, :nodom_wrap  => true) %>

    <% elsif flash[:error] %>

      <%= js add_gritter(flash[:error], :image => :error, :title => "Error", :nodom_wrap  => true) %>

    <% end %>



    <div class="wrapper">
      <div class="sub-wrapper">

      <%= yield %>

      </div>
    </div>
  </body>
</html>
