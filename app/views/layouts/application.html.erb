<!DOCTYPE html>
<html>
  <head>
    <title>ThirtyWins</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link href="https://fonts.googleapis.com/css?family=Oxygen:300,700" rel="stylesheet">

  </head>

  <body>

  <header>
    <span> ThirtyWins : Goals, Game-ified. </span><button class="hamburger">&#9776;</button>
  </header>

  <div class="menu">
    <ul>
    <% if current_user %>
      <li><%= image_tag @user.profile_picture.thumb.url, class: 'profile_thumb' %>  <span><%= current_user.email %></span></li>
    <% end %>
      <li><%= link_to "Home", root_path %></li>
      <li><%= link_to "Pledges", pledges_path %></li>
    <% if current_user %>
      <li><%= link_to "Edit Profile", edit_user_registration_path %></li>
      <li><%= link_to "Log out", destroy_user_session_path, method: :delete %></li>
    <% else %>
      <li><%= link_to "Sign In", new_user_session_path %></li>
      <li><%= link_to "Register",  new_user_registration_path %></li>
    <% end %>
    </ul>
  </div> 
  
  <p class="notice"><%= notice %></p>
  <p class="alert"><%= alert %></p>


<!-- Body wrapper, main content -->

  <div class="wrapper">

    <div class="sub-wrapper">

      <%= yield %>

    </div>

  </div>

<!-- Footer -->

  <div class="footer-container">
    <footer>
      <div class="footer-left">

        <!-- Public_activity feed -->

        <div class="activity-feed">
          <%= render 'shared/activities' %>
        </div>
      </div>

      <!-- Footer right divs -->

      <div class="footer-right">

        <div class="footer-right-right"

          <p>Join our mailing list:</p>

          <form action="demo_form" class="demo_form">
            <input type="text" name="email" placeholder="email" class="email-field"><br>
            <input type="submit" value="Subscribe" disabled>
          </form>

          <br />

          <a title="Follow us on Twitter" href="#" target="_blank">
            <i class="fa fa-twitter fa-3x"></i>
          </a>

          <a title="Find us on Facebook" href="#" target="_blank">
          <i class="fa fa-facebook fa-3x"></i>
          </a>

          <a title="Follow us on Instagram" href="#" target="_blank">
          <i class="fa fa-instagram fa-3x"></i>
          </a>

        </div>

        <div class="footer-right-left">
          <ul>
            <li><a href="#">FAQ</a></li>
            <li><a href="#">Terms and Conditions</a></li>
            <li><a href="#">Jobs</a></li>
            <li><a href="#">Contact</a></li>
            <li><a href="#">Chanse's sound page.</a></li>
          </ul>
        </div>

      </div>

      </footer>
    </div>

  </body>
</html>
